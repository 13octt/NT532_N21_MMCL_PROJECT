<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <!-- Hiển thị nhiệt độ -->
    <TextView
        android:id="@+id/temperature_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature:"
        android:textSize="24sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"/>

    <TextView
        android:id="@+id/temperature_value_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25°C"
        android:textSize="36sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_below="@+id/temperature_text_view"/>

    <!-- Hiển thị độ ẩm -->
    <TextView
        android:id="@+id/humidity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity:"
        android:textSize="24sp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/humidity_value_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50%"
        android:textSize="36sp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@+id/humidity_text_view"
        android:layout_alignParentEnd="true"/>

    <!-- Hiển thị thanh tiến trình -->
    <TextView
        android:id="@+id/progress_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading data..."
        android:textSize="24sp"
        android:layout_marginTop="24dp"
        android:layout_centerInParent="true"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_text_view"
        android:layout_centerInParent="true"/>

</RelativeLayout>